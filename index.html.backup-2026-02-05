        // Switch device pricing
        function switchDevice(deviceNum, btn) {
            // Update active button
            document.querySelectorAll('.device-btn').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            
            // Update pricing grid
            const grid = document.getElementById('pricingGrid');
            const plans = pricingData[deviceNum];
            
            grid.innerHTML = plans.map(plan => `
                <div class="price-card ${plan.popular ? 'popular' : ''}">
                    ${plan.badge ? `<span class="popular-badge">${plan.badge}</span>` : ''}
                    <div class="price-header">
                        <h3 class="price-title">${plan.title}</h3>
                        <div class="price-amount">${plan.price}<sup>${plan.period}</sup></div>
                        <div class="price-original">${plan.original}</div>
                        <div class="price-save">${plan.save}</div>
                    </div>
                    <ul class="price-features">
                        ${plan.features.map(f => `<li>${f}</li>`).join('')}
                    </ul>
                    <a href="https://wa.me/33773436514?text=${plan.whatsappText}" 
                       onclick="gtag('event', 'click', {'event_category': 'WhatsApp', 'event_label': '${plan.title} ${deviceNum} Device'});" 
                       class="price-cta">Get Started Now</a>
                    <div class="guarantee">${plan.guarantee}</div>
                </div>
            `).join('');
        }
        
        // Countdown Timer
        function updateCountdown() {
            const savedTime = localStorage.getItem('countdownEnd');
            const now = new Date().getTime();
            let countdownEnd;
            
            if (savedTime && parseInt(savedTime) > now) {
                countdownEnd = parseInt(savedTime);
            } else {
                // Set new 24h countdown
                countdownEnd = now + (24 * 60 * 60 * 1000);
                localStorage.setItem('countdownEnd', countdownEnd);
            }
            
            const distance = countdownEnd - now;
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);
            
            const display = `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            document.getElementById('countdown').textContent = display;
            
            if (distance < 0) {
                localStorage.removeItem('countdownEnd');
                updateCountdown();
            }
        }
        
        setInterval(updateCountdown, 1000);
        updateCountdown();
        
        // Sticky Header
        window.addEventListener('scroll', function() {
            const header = document.getElementById('stickyHeader');
            if (window.scrollY > 500) {
                header.classList.add('show');
            } else {
                header.classList.remove('show');
            }
        });
        
        // Exit Intent Popup
        let exitShown = false;
        document.addEventListener('mouseleave', function(e) {
            if (e.clientY <= 0 && !exitShown) {
                document.getElementById('exitPopup').classList.add('show');
                exitShown = true;
            }
        });
        
        function closePopup() {
            document.getElementById('exitPopup').classList.remove('show');
        }
        
        // Close popup on click outside
        document.getElementById('exitPopup').addEventListener('click', function(e) {
            if (e.target === this) {
                closePopup();
            }
        });
        
        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });
        
        // Track scroll depth
        let maxScroll = 0;
        window.addEventListener('scroll', function() {
            const scrollPercent = (window.scrollY / (document.documentElement.scrollHeight - window.innerHeight)) * 100;
            if (scrollPercent > maxScroll) {
                maxScroll = scrollPercent;
                if (maxScroll > 25 && maxScroll <= 30) {
                    gtag('event', 'scroll', {'event_category': 'Engagement', 'event_label': '25%'});
                } else if (maxScroll > 50 && maxScroll <= 55) {
                    gtag('event', 'scroll', {'event_category': 'Engagement', 'event_label': '50%'});
                } else if (maxScroll > 75 && maxScroll <= 80) {
                    gtag('event', 'scroll', {'event_category': 'Engagement', 'event_label': '75%'});
                } else if (maxScroll > 95) {
                    gtag('event', 'scroll', {'event_category': 'Engagement', 'event_label': '100%'});
                }
            }
        });
        
        // Track time on page
        let startTime = Date.now();
        window.addEventListener('beforeunload', function() {
            const timeOnPage = Math.round((Date.now() - startTime) / 1000);
            gtag('event', 'timing_complete', {
                'name': 'time_on_page',
                'value': timeOnPage,
                'event_category': 'Engagement'
            });
        });
    </script>
